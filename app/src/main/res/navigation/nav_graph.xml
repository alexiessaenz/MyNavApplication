<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/fragmentHome">

    <fragment android:id="@+id/fragmentHome" android:name="com.saenz.mynavapplication.FragmentHome"
              android:label="fragment_fragment_home" tools:layout="@layout/fragment_fragment_home">
        <action android:id="@+id/action_fragmentHome_to_fragmentSecond" app:destination="@id/fragmentSecond"/>
    </fragment>
    <fragment android:id="@+id/fragmentSecond" android:name="com.saenz.mynavapplication.FragmentSecond"
              android:label="fragment_fragment_second" tools:layout="@layout/fragment_fragment_second">
        <action android:id="@+id/action_fragmentSecond_to_fragmentThird" app:destination="@id/fragmentThird"/>
    </fragment>
    <fragment android:id="@+id/fragmentThird" android:name="com.saenz.mynavapplication.FragmentThird"
              android:label="fragment_fragment_third" tools:layout="@layout/fragment_fragment_third">
        <action android:id="@+id/action_fragmentThird_to_fragmentFinal" app:destination="@id/fragmentFinal"/>
    </fragment>
    <fragment android:id="@+id/fragmentFinal" android:name="com.saenz.mynavapplication.FragmentFinal"
              android:label="fragment_fragment_final" tools:layout="@layout/fragment_fragment_final">
        <action android:id="@+id/action_fragmentFinal_to_fragmentHome" app:popUpTo="@+id/fragmentHome"/>
    </fragment>
</navigation>